<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/receiverImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/receive_image" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/messageText"
        android:text="Time goes here"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="173dp"
        android:layout_height="31dp"
        android:layout_alignBaseline="@id/timeText"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-13dp"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/receiverImage"
        android:text="Message goes here" />

</RelativeLayout>
